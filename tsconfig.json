{
    "compilerOptions": {
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "ESNext",

        "jsx": "react-jsx",
        "allowJs": true,
        "outDir": "dist",

        /* Bundler mode */
        "moduleResolution": "node",
        "declaration": true,

        "noEmit": false,

        /* Linting */
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["examples", "dist"]
}
